<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/profile"
            android:padding="@dimen/_20sdp"
            />

        <!--SERVICE TYPE-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/root_service_type"
                    android:layout_below="@+id/root_logo_booking_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/textView_serviceType_serviceProviderDetail"
                        android:text="@string/service_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp_16"
                        />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@drawable/greyright_arrow"
                        android:id="@+id/imageView_rightArrow_serviceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView_service_type_dynamic"
                    android:text="@string/car_repair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/textView_service_type_dynamic2"
                    android:text="@string/servicetype_car_repair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="@dimen/_10sdp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray"
                    />

                <!--SERVICE PROVIDER DETAILS-->

                <RelativeLayout
                    android:id="@+id/root_service_provider_detail"
                    android:layout_below="@+id/root_logo_booking_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/textView_service_provider_detail"
                        android:text="@string/service_provider_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp_16"
                        />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@drawable/greyright_arrow"
                        android:id="@+id/imageView_rightArrow_service_provider_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView_service_provider_detail_dynamic"
                    android:text="@string/service_provider_detail_dummy_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="@dimen/_10sdp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray"
                    />

                <!--SERVICE PROVIDER ADDRESS-->

                <RelativeLayout
                    android:id="@+id/root_service_provider_address"
                    android:layout_below="@+id/root_logo_booking_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/textView_service_provider_address"
                        android:text="@string/service_provider_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp_16"
                        />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@drawable/greyright_arrow"
                        android:id="@+id/imageView_rightArrow_service_provider_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView_service_provider_address_dynamic"
                    android:text="@string/dummy_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="@dimen/_10sdp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray"
                    />


                <!--RATING-->

                <RelativeLayout
                    android:id="@+id/root_booking_detail_rating"
                    android:layout_below="@+id/root_logo_booking_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/textView_booking_detail_rating"
                        android:text="@string/rating_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp_16"
                        />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@drawable/greyright_arrow"
                        android:id="@+id/imageView_rightArrow_booking_detail_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_7sdp"
                        />
                </RelativeLayout>

                <!--STARS-->

                <LinearLayout
                    android:padding="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearlayout_starsFavorites_bookingDetail" >

                    <ImageView
                        android:src="@drawable/star"
                        android:padding="@dimen/dp_3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                    <ImageView
                        android:src="@drawable/star"
                        android:padding="@dimen/dp_3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                    <ImageView
                        android:src="@drawable/star"
                        android:padding="@dimen/dp_3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                    <ImageView
                        android:src="@drawable/gray_star"
                        android:padding="@dimen/dp_3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                    <ImageView
                        android:src="@drawable/gray_star"
                        android:padding="@dimen/dp_3"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>

                </LinearLayout>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</layout>
