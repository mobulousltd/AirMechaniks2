<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativelayout_headingMyPlan"
            android:background="@color/booking_completed_color"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp">

            <!--Card Buttons-->
            <TextView
                app:font="@{`roboto`}"
                android:id="@+id/textView_durationMyPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/dp_7"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingStart="@dimen/_16sdp"
                android:text="@string/duration_myplan"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"

                />


            <TextView
                app:font="@{`roboto`}"
                android:id="@+id/textView_amountMyPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/amount_myplan"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:layout_alignBaseline="@+id/textView_durationMyPlan"
                android:layout_alignBottom="@+id/textView_durationMyPlan"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>




        <RelativeLayout
            android:background="@drawable/box"
            android:id="@+id/relative_allDetailsMyPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout_headingMyPlan"
            android:layout_marginBottom="@dimen/_12sdp"
            android:paddingBottom="@dimen/_10sdp"
            >
            <ImageView
                android:id="@+id/imageView_calenderMyPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/myplan_calendar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/textView_expirydateTextMyPlan"
                />

            <TextView
                android:id="@+id/textView_expirydateTextMyPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expirydate_text_myplan"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_toRightOf="@+id/imageView_calenderMyPlan"
                android:layout_toEndOf="@+id/imageView_calenderMyPlan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expirydate_myplan"
                android:id="@+id/textView_expirydateMyPlan"
                android:layout_marginRight="17dp"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignTop="@+id/textView_expirydateTextMyPlan"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

            <TextView
                app:font="@{`roboto`}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/benefits_myplan"
                android:textSize="@dimen/sp_17"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/benifits_gray"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_below="@+id/imageView_calenderMyPlan"
                android:id="@+id/textView_benefitsHeadingMyPlan"
                android:layout_alignRight="@+id/textView_descriptionMyPlan"
                android:layout_alignEnd="@+id/textView_descriptionMyPlan"
                android:layout_alignLeft="@+id/textView_descriptionMyPlan"
                android:layout_alignStart="@+id/textView_descriptionMyPlan" />

            <TextView
                app:font="@{`light`}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_myplan"
                android:textSize="@dimen/sp_15"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/gray"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_below="@+id/textView_benefitsHeadingMyPlan"
                android:id="@+id/textView_descriptionMyPlan"
                android:layout_alignRight="@+id/textView_expirydateMyPlan"
                android:layout_alignEnd="@+id/textView_expirydateMyPlan" />



        </RelativeLayout>


    </RelativeLayout>

</layout>