                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/_7sdp"

                        />
                </LinearLayout>


                <View
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
