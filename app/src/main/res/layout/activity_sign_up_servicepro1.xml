                        android:inputType="numberSigned"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="#dbdbdb"
                        android:textSize="@dimen/sp_16"
                        android:theme="@style/MyEditTextTheme"
