<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <!--Push NOTIFICATION-->

        <RelativeLayout
            android:id="@+id/root_pushnotify_settingsFrag"
            android:layout_margin="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/textView_pushNotification_settingsFrag"
                android:text="@string/push_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_16"
                app:font="@{`regular`}"

                />
            <ImageView
                android:id="@+id/imgView_pushNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/on_btn"

                />

        </RelativeLayout>
        <!--android:button="@drawable/switch_changer_profile_screen"-->

        <TextView
            android:id="@+id/line1_settingsFrag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/line_gray"

            />

        <!--CHANGE PASSWORD-->

        <RelativeLayout
            android:id="@+id/root_changePassword_settingsFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/textView_changePassword_settingsFrag"
                android:text="@string/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_16"
                app:font="@{`regular`}"

                />
            <ImageView
                android:id="@+id/imageView_changePassword_settingsFrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/profile_right_arrow"
                android:tint="@color/blue"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/line2_settingsFrag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/line_gray"

            />



        <!--About Us-->

        <RelativeLayout
            android:id="@+id/root_aboutUs_settingsFrag"
            android:layout_margin="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/textView_aboutUs_settingsFrag"
                android:text="@string/about_us_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_16"
                app:font="@{`regular`}"

                />


        </RelativeLayout>

        <TextView
            android:id="@+id/line3_settingsFrag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/line_gray"

            />
        <!--LOgout-->

        <RelativeLayout
            android:id="@+id/root_logout_settingsFrag"
            android:layout_margin="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/textView_logout_settingsFrag"
                android:text="@string/logout_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_16"
                app:font="@{`regular`}"

                />


        </RelativeLayout>
        <TextView
            android:id="@+id/line4_settingsFrag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/line_gray"

            />
        </LinearLayout>

</layout>