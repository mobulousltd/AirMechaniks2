<?xml version="1.0" encoding="utf-8"?>
<!--PAGE STARTS-->

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">


        <RelativeLayout
            android:id="@+id/relative_InsideCardViewFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <mobulous12.airmechanics.utils.CircularImageView
                android:id="@+id/circularImageView_Favorites"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/garage_image" />


            <!--Service provider details layout-->

            <RelativeLayout
                android:id="@+id/relative_allDetailsFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/circularImageView_Favorites"
                android:layout_toRightOf="@+id/circularImageView_Favorites">

                <TextView
                    android:id="@+id/textView_serviceProviderName_favorites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:text="@string/raj_auto_garage"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/linearlayout_starsFavorites"
                    >

                    <ImageView
                        android:id="@+id/imageView_star1"
                        android:src="@drawable/star"
                        android:padding="@dimen/_2sdp"

                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/circularImageView_profile_pic_info_window"
                        android:layout_marginTop="@dimen/_20sdp"
                        />

                    <ImageView
                        android:id="@+id/imageView_star2"
                        android:src="@drawable/star"
                        android:padding="@dimen/_2sdp"
                        android:layout_below="@+id/rootLayout"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/imageView_star1"
                        android:layout_marginTop="@dimen/_20sdp"
                        />

                    <ImageView
                        android:id="@+id/imageView_star3"
                        android:src="@drawable/star"
                        android:padding="@dimen/_2sdp"
                        android:layout_below="@+id/rootLayout"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/imageView_star2"
                        android:layout_marginTop="@dimen/_20sdp"
                        />

                    <ImageView
                        android:id="@+id/imageView_star4"
                        android:src="@drawable/gray_star"
                        android:padding="@dimen/_2sdp"
                        android:layout_below="@+id/rootLayout"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/imageView_star3"
                        android:layout_marginTop="@dimen/_20sdp"
                        />

                    <ImageView
                        android:id="@+id/imageView_star5"
                        android:src="@drawable/gray_star"
                        android:padding="@dimen/_2sdp"
                        android:layout_below="@+id/rootLayout"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/imageView_star4"
                        android:layout_marginTop="@dimen/_20sdp"
                        />

                </LinearLayout>


                <!--*********-->
                <!--DAYS-->

                <LinearLayout
                    android:id="@+id/linearlayout_Days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearlayout_starsFavorites"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_sun_serviceProviderDetail"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:textSize="@dimen/sp_9"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/gray_circle"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/S"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/textView_mon_serviceProviderDetail"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:textSize="@dimen/sp_9"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/M"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/textView_tue_serviceProviderDetail"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:textSize="@dimen/sp_9"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/T"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/textView_wed_serviceProviderDetail"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:textSize="@dimen/sp_9"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"

                        android:text="@string/W"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/textView_thur_serviceProviderDetail"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:textSize="@dimen/sp_9"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"

                        android:text="@string/T"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/textView_fri_serviceProviderDetail"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:textSize="@dimen/sp_9"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/green_circle"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"

                        android:text="@string/F"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/textView_sat_serviceProviderDetail"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:textSize="@dimen/sp_9"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/gray_circle"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/S"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />


                </LinearLayout>



            </RelativeLayout>


            <!--Card Buttons-->
            <LinearLayout
                android:id="@+id/linearlayout_CardButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_allDetailsFavorites"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/Base.Widget.AppCompat.ButtonBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/ask_for_quote_color"
                    android:gravity="center"
                    android:padding="@dimen/dp_7"
                    android:text="@string/price_with_dollar"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"

                    />


                <!-- Review And Rating-->
                <RelativeLayout
                    android:id="@+id/relative_ReviewAndRating"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/review1_color"
                    android:gravity="center"

                    >

                    <TextView
                        android:id="@+id/button_Review"
                        style="@style/Base.Widget.AppCompat.ButtonBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:text="@string/review"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/imageView_ReviewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_toEndOf="@+id/button_Review"
                        android:layout_toRightOf="@+id/button_Review"
                        android:background="@drawable/circle"
                        android:contentDescription="@string/rating"
                        android:gravity="center"
                        android:importantForAccessibility="auto"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/rating"
                        android:textSize="@dimen/sp_10" />


                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>
