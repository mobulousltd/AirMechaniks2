<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <view
        android:layout_centerInParent="true"
        class="eu.janmuller.android.simplecropimage.CropImageView"
        android:id="@+id/image"
        android:background="#DD000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_x="0dip"
        android:layout_y="0dip"
        />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:background="#4768f3"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:id="@+id/discard"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            style="@style/CropButton"
            android:text="@string/cancel"
            />

        <ImageButton
            android:background="#9e9e9e"
            android:layout_weight="1"
            android:id="@+id/rotateLeft"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/discard"
            style="@style/CropButton"
            android:src="@drawable/left_image"
            />

        <ImageButton
            android:background="#9e9e9e"
            android:layout_weight="1"
            android:id="@+id/rotateRight"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/rotateLeft"
            style="@style/CropButton"
            android:src="@drawable/right_image"
            />
        <Button
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:background="#4768f3"
            android:layout_weight="1"
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rotateRight"
            style="@style/CropButton"
            android:text="@string/save"
            />
    </LinearLayout>
